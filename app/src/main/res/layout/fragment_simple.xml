<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SimpleFragment">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/peli1"
            android:id="@+id/img1"
            android:layout_width="200dp"
            android:layout_height="200dp">
        </ImageView>
        <ImageView
            android:src="@drawable/peli2"
            android:id="@+id/img2"
            android:layout_width="200dp"
            android:layout_height="200dp">
        </ImageView>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_button_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginLeft="25dp"
            android:text="Pelicula 1" />

        <RadioButton
            android:id="@+id/radio_button_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:text="Pelicula 2" />

    </RadioGroup>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvoto1"
            android:textSize="20sp"
            android:text=""
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/radio_button_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:id="@+id/tvoto2"
            android:text=""
            android:textSize="20sp"
            android:layout_marginLeft="190dp"
            android:layout_below="@+id/radio_button_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>
      <Button
          android:id="@+id/btnvotar"
          android:text="Votar"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

      </Button>


</LinearLayout>